<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.View_Accountant"
    android:id="@+id/viewAccountantLayout"
    >

    <ImageView
        android:id="@+id/accountantImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/noimg"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/accountantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Accountant name"
        android:textSize="25sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/accountantEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Accountant email"
        android:textSize="25sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/accountantGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Accountant gender"
        android:textSize="25sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/accountantExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Accountant experience"
        android:textSize="25sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/accountantMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Accountant mobile number"
        android:textSize="25sp"
        android:layout_margin="10dp"/>


    <Button
        android:id="@+id/btnBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#476856"
        android:text="Book"
        android:textStyle="bold"/>



</LinearLayout>